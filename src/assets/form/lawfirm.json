{
  "title": "Individual",
  "name": "individual",
  "components": [
    {
      "key": "CompanyInformationPanel",
      "title": "Company Information",
      "theme": "default",
      "type": "panel",
      "components": [
        {
          "key": "companyColumns",
          "type": "columns",
          "hideLabel": true,
          "columns": [
            {
              "components": [
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Company Name",
                  "key": "companyName",
                  "placeholder": "Company Name",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^[A-Za-z ]+$"
                  },
                  "errors": {
                    "pattern": "Company Name should contain only alphabets",
                    "required": "Please enter your Company Name"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 1
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "PAN Card Number",
                  "key": "PanCardNo",
                  "placeholder": "PAN Card Number",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "description": "The PAN is a 10 letter alpha numeric identifier which represents the card holder. Among 10 letters, first 5 will be alphabets, next 4 will be numeric and the 10th letter will be an alphabet. ",
                  "validate": {
                    "required": true,
                    "pattern": "^([a-zA-Z]){5}([0-9]){4}([a-zA-Z]){1}?$"
                  },
                  "errors": {
                    "pattern": "PAN Card number should be 10  letter alpha numeric",
                    "required": "Please enter your PAN Card Number"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 3
                },
                {
                  "input": true,
                  "tableView": true,
                  "label": "Type of Firm",
                  "key": "typeOfFirm",
                  "placeholder": "Type of Firm",
                  "data": {
                    "values": [
                      {
                        "value": "Individual",
                        "label": "Individual"
                      },
                      {
                        "value": "Partnership",
                        "label": "Partnership"
                      },
                      {
                        "value": "Private limited",
                        "label": "Private limited"
                      },
                      {
                        "value": "Public Limited",
                        "label": "Public Limited"
                      }
                    ]
                  },
                  "dataSrc": "values",
                  "template": "<span>{{ item.label }}</span>",
                  "validate": {
                    "required": true
                  },
                  "errors": {
                    "required": "Please select the type of firm"
                  },
                  "type": "select",
                  "labelPosition": "left-left",
                  "tabindex": 5
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Official Email ID",
                  "key": "officialEmailId",
                  "placeholder": "email@address.com",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^(([^<>()[\\]\\.,;:\\s@']+(\\.[^<>()[\\]\\.,;:\\s@']+)*)|('.+'))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
                  },
                  "errors": {
                    "pattern": "Please enter your valid Email ID",
                    "required": "Please enter your Email ID"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 7
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "No of Lawyer in your firm",
                  "key": "noOfLawyerInYourFirm",
                  "placeholder": "No of Lawyer in your firm",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^[0-9 ]+$",
                    "custom": "valid = (data.noOfLawyerInYourFirm != 0)"
                  },
                  "errors": {
                    "pattern": "Please enter only numbers",
                    "custom": "Number of lawyers in a firm should not be 0",
                    "required": "Please enter the number of Lawyers in your firm"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 8
                }
              ]
            },
            {
              "components": [
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Company Representative Name",
                  "key": "companyRepresentativeName",
                  "placeholder": "Company Representative Name",
                  "spellcheck": false,
                  "validate": {
                    "required": true,
                    "pattern": "^[A-Za-z ]+$"
                  },
                  "errors": {
                    "pattern": "Company Representative Name should contain only alphabets",
                    "required": "Please enter your Representative Name"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 2
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Company Representative Designation",
                  "key": "companyRepresentativeDesignation",
                  "placeholder": "Company Representative Designation",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^[A-Za-z ]+$"
                  },
                  "errors": {
                    "pattern": "Company Representative Designation should contain only alphabets",
                    "required": "Please enter your Designation"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 4
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "GST No",
                  "key": "gstNo",
                  "placeholder": "ex: 33AABCU9603R1ZU",
                  "description": "First two digits represent the state code followed by ten digit PAN number of the taxpayer and the thirteenth digit is based on the registration within a state and the next charcter will 'Z' by default and the last charcter will for check code may be number or alphabet. ",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": false,
                    "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
                  },
                  "errors": {
                    "pattern": "Enter the valid GST Number",
                    "required": "Please enter your GST Number"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 6
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "AddressInformationPanel",
      "title": "Company Address / Head office Address",
      "theme": "default",
      "type": "panel",
      "components": [
        {
          "type": "columns",
          "hideLabel": true,
          "columns": [
            {
              "components": [
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Address",
                  "key": "address",
                  "placeholder": "Address",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true
                  },
                  "errors": {
                    "required": "Please enter your Address"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 10
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Pincode",
                  "key": "pincode",
                  "placeholder": "Pincode",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^[1-9][0-9]{5}$"
                  },
                  "errors": {
                    "pattern": "Enter the valid Pincode",
                    "required": "Please enter your Pincode"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 12
                },
                {
                  "input": true,
                  "tableView": true,
                  "label": "City",
                  "key": "city",
                  "placeholder": "City",
                  "data": {
                    "url": "https://data.lawe.co.in/citybystate"
                  },
                  "dataSrc": "url",
                  "filter": "id={{data.state.id}}",
                  "template": "<span>{{ item.cityName }}</span>",
                  "validate": {
                    "required": true
                  },
                  "errors": {
                    "required": "Please select your City"
                  },
                  "type": "select",
                  "labelPosition": "left-left",
                  "tabindex": 14
                }
              ]
            },
            {
              "components": [
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Area",
                  "key": "location",
                  "placeholder": "Area",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true
                  },
                  "errors": {
                    "required": "Please enter your Area"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 11
                },
                {
                  "input": true,
                  "tableView": true,
                  "label": "State",
                  "key": "state",
                  "placeholder": "State",
                  "data": {
                    "url": "https://data.lawe.co.in/states"
                  },
                  "dataSrc": "url",
                  "template": "<span>{{ item.stateName }}</span>",
                  "validate": {
                    "required": true
                  },
                  "errors": {
                    "required": "Please select your State"
                  },
                  "type": "select",
                  "labelPosition": "left-left",
                  "tabindex": 13
                },
                {
                  "input": true,
                  "tableView": true,
                  "label": "Country",
                  "key": "country",
                  "placeholder": "Country",
                  "data": {
                    "values": [
                      {
                        "value": "India",
                        "label": "India"
                      }
                    ]
                  },
                  "dataSrc": "values",
                  "defaultValue": "India",
                  "template": "<span>{{ item.label }}</span>",
                  "validate": {
                    "required": true
                  },
                  "type": "select",
                  "labelPosition": "left-left",
                  "tabindex": 15
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "MobileSecurityPanel",
      "title": "Mobile/Security",
      "theme": "default",
      "type": "panel",
      "components": [
        {
          "type": "columns",
          "hideLabel": true,
          "columns": [
            {
              "components": [
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Mobile Number",
                  "key": "mobileNo",
                  "placeholder": "Mobile Number",
                  "prefix": "+91",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^[6-9][0-9]{9}$"
                  },
                  "errors": {
                    "pattern": "Enter valid Mobile Number",
                    "required": "Please enter your Mobile Number"
                  },
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "tabindex": 16
                },
                {
                  "input": true,
                  "tableView": true,
                  "label": "OTP",
                  "key": "otp",
                  "placeholder": "OTP",
                  "autocomplete": "off",
                  "validate": {
                    "required": false
                  },
                  "type": "number",
                  "labelPosition": "left-left",
                  "truncateMultipleSpaces": false,
                  "requireDecimal": false,
                  "delimiter": false,
                  "tabindex": 18
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Password",
                  "key": "password",
                  "description": "Use a minimum of 8 characters with at least one uppercase letter, one lowercase letter, one number and one special character",
                  "placeholder": "ex: Test@123",
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&#])[A-Za-z\\d@$!%*?&#]{8,}$"
                  },
                  "errors": {
                    "pattern": "Password should contain a minimum of 8 characters with at least one Uppercase letter, one Lowercase letter, one Number and one Special character",
                    "required": "Password field is required"
                  },
                  "logic": [
                    {
                      "name": "PasswordLogic",
                      "trigger": {
                        "type": "simple",
                        "simple": {
                          "show": true,
                          "when": "showpwd",
                          "eq": "true"
                        }
                      },
                      "actions": [   
                        {
                          "name": "MaskAction",
                          "type": "property",
                          "property": {
                            "label": "Mask",
                            "value": "mask",
                            "type": "boolean"
                          },
                          "state": false
                        }
                      ]
                    }
                  ],
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "mask":true,
                  "tabindex": 20,
                  "redrawOn": "password",
                  "clearOnHide": false
                },
                {
                  "label": "Show Password",
                  "key": "showpwd",
                  "type": "checkbox",
                  "input": true
                }
              ]
            },
            {
              "components": [
                {
                  "input": true,
                  "label": "Verify Phone",
                  "key": "panel4ColumnsSendOtp",
                  "size": "md",
                  "action": "url",
                  "disableOnInvalid": false,
                  "theme": "default",
                  "type": "button",
                  "customClass": "button button-text",
                  "headers": [
                    {
                      "value": "{{data.mobileNo}}",
                      "header": "number"
                    }
                  ],
                  "url": "https://data.lawe.co.in/generateOtp",
                  "tabindex": 17
                },
                {
                  "input": true,
                  "tableView": true,
                  "inputType": "text",
                  "label": "Confirm Password",
                  "key": "confirmPassword",
                  "placeholder": "Re enter Password",
                  "mask": true,
                  "spellcheck": false,
                  "autocomplete": "off",
                  "validate": {
                    "required": true,
                    "custom": "valid = (data.password == data.confirmPassword)"
                  },
                  "errors": {
                    "custom": "Password and Confirmation Password do not match.",
                    "required": "Please enter the password again for Confirmation"
                  },
                  "logic": [
                    {
                      "name": "PasswordLogic",
                      "trigger": {
                        "type": "simple",
                        "simple": {
                          "show": true,
                          "when": "showpwd",
                          "eq": "true"
                        }
                      },
                      "actions": [   
                        {
                          "name": "MaskAction",
                          "type": "property",
                          "property": {
                            "label": "Mask",
                            "value": "mask",
                            "type": "boolean"
                          },
                          "state": false
                        }
                      ]
                    }
                  ],
                  "type": "textfield",
                  "labelPosition": "left-left",
                  "clearOnHide": false,
                  "tabindex": 22
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "content",
      "label": "Content",
      "tag": "p",
      "content": "Declaration:- By listing or updating my mobile number, I authorize LAWE to email/call/send SMS text messages using an automatic telephone dialing system or prerecorded message to my cell phone number to provide information and services related to legal enquiries. Additionally, I authorize LAWE to follow up in order to remind me of upcoming appointments or provide messages that assist me with my legal practice.",
      "type": "htmlelement",
      "hideLabel": true
    },
    {
      "label": "AgreeCheck",
      "key": "AgreeCheck",
      "columns": [
        {
          "components": [
            {
              "input": true,
              "inputType": "checkbox",
              "tableView": true,
              "label": "By Checking this box, I am agreeing to the term & conditions of LAWE",
              "key": "declarations",
              "validate": {
                "required": true
              },
              "type": "checkbox",
              "labelPosition": "right",
              "tabindex": 22
            }
          ]
        }
      ],
      "type": "columns",
      "hideLabel": true
    },
    {
      "label": "Submit",
      "key": "Submit",
      "columns": [
        {
          "components": [],
          "width": 4
        },
        {
          "components": [
            {
              "input": true,
              "label": "Add Lawyer",
              "key": "addlawyer",
              "size": "sm",
              "block": true,
              "action": "saveState",
              "theme": "primary",
              "type": "button",
              "customClass": "signup-button",
              "tabindex": 23
            }
          ],
          "width": 4
        },
        {
          "components": [],
          "width": 4
        }
      ],
      "type": "columns",
      "hideLabel": true
    }
  ]
}